{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": ["vite/client"],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // TODO @nighca: enable noUncheckedIndexedAccess after fixing related issues
    "noUncheckedIndexedAccess": false
  }
}
